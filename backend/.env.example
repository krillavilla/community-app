# ================================
# Garden Platform Backend - Environment Variables
# Copy this to .env and fill in your values
# ================================

# Application
PROJECT_NAME="Garden Platform"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
DEBUG=true
ENVIRONMENT="development"

# Database
# Development: use SQLite
DATABASE_URL="sqlite:///./garden_dev.db"
# Production: use PostgreSQL
# DATABASE_URL="postgresql://user:password@localhost:5432/garden_db"

# Auth0 Configuration
# Sign up at https://auth0.com and create:
# 1. API with identifier: https://api.garden-platform.com
# 2. Single Page Application
AUTH0_DOMAIN="YOUR_TENANT.us.auth0.com"
AUTH0_API_AUDIENCE="https://api.garden-platform.com"
AUTH0_ALGORITHMS="RS256"

# ML Service
ML_SERVICE_URL="http://localhost:8001"
ML_API_KEY="YOUR_RANDOM_SECRET_KEY_HERE"

# CORS Origins (JSON array format)
CORS_ORIGINS='["http://localhost:3000","http://localhost:5173","http://localhost"]'

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY="YOUR_SECRET_KEY_HERE_USE_OPENSSL_RAND"

# Logging
LOG_LEVEL="INFO"

# Cloudflare R2 Storage (optional for video uploads)
# Sign up at https://dash.cloudflare.com/r2
R2_ACCESS_KEY_ID=YOUR_R2_ACCESS_KEY_ID
R2_SECRET_ACCESS_KEY=YOUR_R2_SECRET_ACCESS_KEY
R2_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_BUCKET_NAME=garden-videos

# Mux Video (optional for video encoding)
# Sign up at https://mux.com
MUX_TOKEN_ID=YOUR_MUX_TOKEN_ID
MUX_TOKEN_SECRET=YOUR_MUX_TOKEN_SECRET
