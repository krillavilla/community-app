# ================================
# Garden Platform - Environment Variables
# Copy this to .env and fill in your values
# ================================

# Database Configuration
POSTGRES_USER=garden
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_DB=garden_db

# Auth0 Configuration (get from https://auth0.com dashboard)
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_API_AUDIENCE=https://api.garden-platform.com

# ML Service
ML_API_KEY=YOUR_RANDOM_SECRET_KEY_HERE

# Frontend (for build time)
VITE_AUTH0_DOMAIN=your-tenant.us.auth0.com
VITE_AUTH0_CLIENT_ID=YOUR_AUTH0_CLIENT_ID_HERE
VITE_AUTH0_AUDIENCE=https://api.garden-platform.com
VITE_AUTH0_REDIRECT_URI=http://localhost
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_ML_SERVICE_URL=http://localhost:8001
VITE_APP_NAME=Garden Platform
VITE_APP_VERSION=1.0.0
